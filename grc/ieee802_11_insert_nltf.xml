<?xml version="1.0"?>

<block>
	<name>WiFi Insert NLTF</name>
	<key>ieee802_11_insert_nltf</key>
	<category>[IEEE802.11]</category>
	<import>import ieee802_11</import>
	<make>ieee802_11.insert_nltf($fft_size, $s1g_cap, $len_tag_key)</make>
	<callback>enable_s1g($s1g_cap)</callback>

  <param>
		<name>FFT Length</name>
		<key>fft_size</key>
		<value>fft_size</value>
		<type>int</type>
	</param>
  <param>
		<name>S1G Capabilities</name>
		<key>s1g_cap</key>
		<value>False</value>
		<type>bool</type>
		<option>
			<name>Disable</name>
			<key>False</key>
		</option>
		<option>
			<name>Enable</name>
			<key>True</key>
		</option>
	</param>
  <param>
		<name>Length Tag Key</name>
		<key>len_tag_key</key>
		<value>"packet_len"</value>
		<type>string</type>
	</param>

  <sink>
		<name>in</name>
		<type>complex</type>
		<vlen>$fft_size</vlen>
	</sink>

  <source>
		<name>out</name>
		<type>complex</type>
    <vlen>$fft_size</vlen>
	</source>

</block>
