<?xml version="1.0"?>

<block>
	<name>WiFi Decode MAC</name>
	<key>ieee802_11_decode_mac</key>
	<category>[IEEE802.11]</category>
	<import>import ieee802_11</import>
	<make>ieee802_11.decode_mac($log, $debug, $s1g_cap)</make>

	<param>
		<name>Log</name>
		<key>log</key>
		<value>False</value>
		<type>bool</type>

		<option>
			<name>Enable</name>
			<key>True</key>
		</option>
		<option>
			<name>Disable</name>
			<key>False</key>
		</option>
	</param>

	<param>
		<name>Debug</name>
		<key>debug</key>
		<value>False</value>
		<type>bool</type>

		<option>
			<name>Enable</name>
			<key>True</key>
		</option>
		<option>
			<name>Disable</name>
			<key>False</key>
		</option>
	</param>

	<param>
		<name>S1G Capabilities</name>
		<key>s1g_cap</key>
		<value>False</value>
		<type>bool</type>
		<option>
			<name>Disable</name>
			<key>False</key>
		</option>
		<option>
			<name>Enable</name>
			<key>True</key>
		</option>
	</param>

	<sink>
		<name>in</name>
		<type>byte</type>
		<vlen>#if $s1g_cap() == True then '52' else '48'#</vlen>
	</sink>

	<source>
		<name>out</name>
		<type>message</type>
		<optional>1</optional>
	</source>

</block>
